
<div class="container-fluid">
  <div class="row g-3 mb-4">
    <div class="col-md-4">
      <div class="card shadow-sm p-3 text-center">
        <h3><%= stats.revenue %></h3>
        <small>Total Revenue</small>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm p-3 text-center">
        <h3><%= stats.completedJobcards %></h3>
        <small>Jobcards Completed Today</small>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm p-3 text-center">
        <h3><%= stats.pendingJobcards %></h3>
        <small>Pending Jobcards</small>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm p-3 text-center">
        <h3><%= stats.serviceManagers %></h3>
        <small>Service Managers</small>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm p-3 text-center">
        <h3><%= stats.technicians %></h3>
        <small>Technicians</small>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm p-3 text-center">
        <h3><%= stats.clients %></h3>
        <small>Clients</small>
      </div>
    </div>
  </div>

  <div class="card shadow-sm p-3">
    <h5 class="mb-3">Revenue per Month</h5>
    <canvas id="myChart" height="120"></canvas>
  </div>
</div>
