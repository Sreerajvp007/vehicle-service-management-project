<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AutoOps - Sign Up</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f9fafb;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      padding: 50px;
      margin: 0;
    }
    .signup-card {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0px 4px 10px rgba(0,0,0,0.05);
      padding: 40px;
      width: 100%;
      max-width: 500px;
      text-align: center;
    }
    .signup-card h2 {
      font-weight: 600;
      margin-bottom: 10px;
    }
    .signup-card p {
      color: #6b7280;
      font-size: 14px;
      margin-bottom: 30px;
    }
    .form-control {
      border-radius: 8px;
      padding: 12px;
      font-size: 14px;
    }
    .btn-primary {
      border-radius: 8px;
      padding: 12px;
      font-weight: 500;
      background-color: #007bff;
      border: none;
    }
    .btn-primary:hover {
      background-color: #0069d9;
    }
    .error {
      color: red;
      font-size: 13px;
      text-align: left;
      margin-top: 5px;
    }
  </style>
</head>
<body>
  <div class="signup-card">
    <h2>Sign up</h2>
    <p>Create Your Account and Join hundreds of workshops</p>

    <form id="signupForm" action="/user/signup" method="POST" novalidate>
      
      <div class="mb-3 text-start">
        <label for="ownername" class="form-label">Workshop Owner Name</label>
        <input type="text" class="form-control" id="ownername" name="ownername" placeholder="Enter owner name" required>
        <div id="ownerError" class="error"></div>
      </div>
      <div class="mb-3 text-start">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
        <div id="emailError" class="error"></div>
      </div>
      <div class="mb-3 text-start">
        <label for="name" class="form-label">Workshop Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter workshop name" required>
        <div id="workshopError" class="error"></div>
      </div>
      <div class="mb-3 text-start">
        <label for="phone" class="form-label">Contact Number</label>
        <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter contact number" required>
        <div id="contactError" class="error"></div>
      </div>
      <div class="mb-3 text-start">
        <label for="city" class="form-label">city</label>
        <input type="text" class="form-control" id="city" name="city" placeholder="Enter city" required>
        <div id="cityError" class="error"></div>
      </div>
      <div class="mb-3 text-start">
        <label for="state" class="form-label">state</label>
        <input type="text" class="form-control" id="state" name="state" placeholder="Enter state" required>
        <div id="stateError" class="error"></div>
      </div>
      <div class="mb-3 text-start">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
        <div id="passwordError" class="error"></div>
      </div>
      <button type="submit" class="btn btn-primary w-100">Sign up</button>
    </form>
  </div>

  <script>
  const form = document.getElementById("signupForm");
  const ownername = document.getElementById("ownername");
  const email = document.getElementById("email");
  const name = document.getElementById("name");
  const phone = document.getElementById("phone");
  const city = document.getElementById("city");
  const state = document.getElementById("state");
  const password = document.getElementById("password");

  const ownerError = document.getElementById("ownerError");
  const emailError = document.getElementById("emailError");
  const workshopError = document.getElementById("workshopError");
  const contactError = document.getElementById("contactError");
  const cityError = document.getElementById("cityError");
  const stateError = document.getElementById("stateError");
  const passwordError = document.getElementById("passwordError");

  form.addEventListener("submit", function(event) {
    let valid = true;

   
    ownerError.textContent = "";
    emailError.textContent = "";
    workshopError.textContent = "";
    contactError.textContent = "";
    cityError.textContent = "";
    stateError.textContent = "";
    passwordError.textContent = "";

   
    if (!ownername.value.trim()) {
      ownerError.textContent = "Owner name is required";
      valid = false;
    }

    
    if (!email.value.trim()) {
      emailError.textContent = "Email is required";
      valid = false;
    } else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email.value)) {
      emailError.textContent = "Invalid email format";
      valid = false;
    }

    
    if (!name.value.trim()) {
      workshopError.textContent = "Workshop name is required";
      valid = false;
    }

    if (!phone.value.trim()) {
      contactError.textContent = "Contact number is required";
      valid = false;
    } else if (!/^\d{10}$/.test(phone.value)) {
      contactError.textContent = "Contact number must be 10 digits";
      valid = false;
    }

    
    if (!city.value.trim()) {
      cityError.textContent = "City is required";
      valid = false;
    }

   
    if (!state.value.trim()) {
      stateError.textContent = "State is required";
      valid = false;
    }

    
    if (!password.value.trim()) {
      passwordError.textContent = "Password is required";
      valid = false;
    } else if (password.value.length < 6) {
      passwordError.textContent = "Password must be at least 6 characters";
      valid = false;
    }

    if (!valid) {
      event.preventDefault();
    }
  });
</script>

</body>
</html>
