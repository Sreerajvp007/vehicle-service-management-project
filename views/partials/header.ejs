<header class="bg-white d-flex justify-content-between align-items-center p-3 border-bottom">
  <div class="d-flex align-items-center">
    <!--Mobile menu button -->
    <button class="btn btn-outline-secondary d-lg-none me-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar">
      <i class="bi bi-list fs-4"></i>
    </button>

    <i class="bi bi-person-circle fs-3 me-2 text-secondary"></i>
    <div>
      <span class="fw-bold"><%= user.name %></span><br>
      <small class="text-muted"><%= user.email %></small>
    </div>
  </div>
  <div>
    <button class="btn btn-danger" id="logoutBtn">
      <i class="bi bi-box-arrow-right"></i> Log out
    </button>
  </div>
</header>
